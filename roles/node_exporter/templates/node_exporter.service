[Unit]
Description=Node Exporter
Requires=node_exporter.socket

[Service]
Type=exec
User=node_exporter
Group=node_exporter
ExecStart=/usr/local/bin/node_exporter \
  --web.systemd-socket \
  --web.config.file=/etc/node_exporter/web.yml
TimeoutStopSec=20s
SendSIGKILL=no
Restart=on-failure

[Install]
WantedBy=multi-user.target
